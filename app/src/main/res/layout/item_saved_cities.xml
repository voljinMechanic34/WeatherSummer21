<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"


>
    <RelativeLayout
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fa315b">

        <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/urn" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/delete_icon"
                android:text="Delete"
                android:textColor="#fff"
                android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:padding="10dp"
    >
    <TextView
            android:id="@+id/text_savedCities_city"
            android:textAlignment="textStart"
            android:text="Вт, 3 авг"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginTop="7dp"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"

    />
    <TextView
            android:id="@+id/text_savedCities_degree"
            android:textAlignment="textEnd"

            android:text="24/13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_alignBaseline="@id/text_savedCities_city"
            android:layout_alignParentRight="true"
    />
    <TextView
            android:id="@+id/text_savedCities_description"
            android:textAlignment="textEnd"
            android:text="24/13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_savedCities_degree"
    />
    </RelativeLayout>

</FrameLayout>